{
  "name": "SLE",
  "version": "0.0.1",
  "description": "(Stupid, Simple or Supercharged) led editor. Pick your name.",
  "main": "build/build-prod/setup/index.js",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "electron": "^20.1.3",
    "fs-extra": "^10.1.0",
    "node-sass": "^7.0.1",
    "sass": "^1.54.9",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "start": "npm run buildDev && npm run runDev",

    "buildProd": "webpack --env production",
    "buildDev": "webpack --env development",

    "runProd": "electron build/build-prod/setup/",
    "runDev": "electron build/build-dev/setup/",

    "packageProd": "electron-forge make"
  },
  "author": "Noah Albers",
  "license": "ISC",
  "dependencies": {
    "blockly": "^8.0.5",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/resources/icon/icon",
        "ignore": [
          "^/[.]vs$",
          "^/src$",
          "^/tsconfig[.]json$",
          "^/node_modules$",
          "^/\\.gitignore$",
          "^/package-lock.json$",
          "^/README.md$",
          "^/webpack\\.config\\.js$",
          "^/example-programs$"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "SLE",
            "loadingGif": "src/resources/icon/installing.gif",
            "setupIcon": "src/resources/icon/icon.ico",
            "iconUrl": "https://raw.githubusercontent.com/Projektlabor-Rheine/SLE/master/src/resources/icon/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "./build/build-prod/resources/icon/icon.png",
              "categories": ["SLE", "Led-Editor", "Arduino", "Microcontroller"]
            }
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./build/build-prod/resources/icon/icon.png",
              "categories": ["SLE", "Led-Editor", "Arduino", "Microcontroller"]
            }
          }
        }
      ]
    }
  }
}
